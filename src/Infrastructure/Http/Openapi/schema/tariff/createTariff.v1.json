{
  "title": "create tariff",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "price": {
            "$ref": "../money.v1.json"
          },
          "term": {
            "type": "object",
            "required": [
              "start",
              "end"
            ],
            "properties": {
              "start": {
                "type": "string",
                "format": "date-time"
              },
              "end": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        },
        "required": [
          "price",
          "term"
        ]
      }
    },
    "product_type": {
      "type": "string",
      "enum": [
        "ticket",
        "broadcatsLink"
      ]
    }
  },
  "required": [
    "event_id",
    "segments",
    "product_type"
  ]
}
