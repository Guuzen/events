{
  "title": "fixedPromocode",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "code": {
      "type": "string"
    },
    "discount": {
      "type": "object",
      "required": [
        "amount",
        "type"
      ],
      "properties": {
        "amount": {
          "$ref": "../money.v1.json"
        },
        "type": {
          "type": "string",
          "enum": [
            "fixed"
          ]
        }
      }
    },
    "useLimit": {
      "type": "number"
    },
    "expireAt": {
      "type": "string",
      "format": "date-time"
    },
    "usable": {
      "type": "boolean"
    },
    "usedInOrders": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "allowedTariffs": {
      "type": "object",
      "required": [
        "type",
        "tariffIds"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "specific"
          ]
        },
        "tariffIds": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    }
  },
  "required": [
    "id",
    "eventId",
    "code",
    "discount",
    "useLimit",
    "expireAt",
    "usable",
    "usedInOrders",
    "allowedTariffs"
  ]
}
